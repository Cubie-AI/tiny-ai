{
  "extends": "@tsconfig/node22",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "src/**/*.json"]
}
